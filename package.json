{
  "name": "use-droppable-area",
  "version": "1.0.1",
  "type": "module",
  "types": "module",
  "main": "dist/index.js",
  "description": "A hook that give you an area on which you can drag and drop file to upload them",
  "keywords": [
    "hook",
    "react",
    "droppable",
    "upload"
  ],
  "repository": {
    "url": "https://github.com/wind198/use-droppable-area"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc --project tsconfig.package.json",
    "preview": "vite preview",
    "prepublish": "yarn build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:react-hooks/recommended"
    ],
    "overrides": [
      {
        "files": "",
        "plugins": [
          "unused-imports"
        ],
        "rules": {
          "no-unused-vars": "off",
          "unused-imports/no-unused-imports": "warn",
          "unused-imports/no-unused-vars": [
            "warn",
            {
              "vars": "all",
              "varsIgnorePattern": "^_",
              "args": "after-used",
              "argsIgnorePattern": "^_"
            }
          ]
        }
      }
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "lodash": "^4.17.21",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "lodash": "^4.17.21",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^3.1.0",
    "eslint": "^8.33.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "@types/lodash": "^4.14.191"
  }
}
